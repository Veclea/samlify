{
  "compilerOptions": {

    "skipLibCheck": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "removeComments": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {},
    "types": [
      "node"
  ],
    "lib": [
      "dom",
    ]
  },
  "atom": { "rewriteTsconfig": false },
  "exclude": [
    "dist",
    "examples",
    "build",
    "node_modules",
    "types/**/*.ts",
    "test/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
