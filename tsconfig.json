{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "removeComments": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {},
    "types": [
      "node"
  ],
    "lib": [
      "dom",
      "es2022", // 建议升级到 ES2022
      "dom.iterable"
    ]
  },
  "atom": { "rewriteTsconfig": false },
  "exclude": [
    "node_modules",
    "types/**/*.ts",
    "test/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
