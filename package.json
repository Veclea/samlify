{
  "name": "samlesa",
  "version": "2.14.0",
  "description": "High-level API for Single Sign On (SAML 2.0) baseed on samlify ",
  "main": "build/index.js",
  "keywords": [
    "nodejs",
    "saml2",
    "sso",
    "slo",
    "metadata"
  ],
  "type": "module",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "tsc",
    "docs": "docsify serve -o docs",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "pretest": "make pretest",
    "test": "NODE_ENV=test nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "hooks:postinstall": "ln -sf $PWD/.pre-commit.sh $PWD/.git/hooks/pre-commit"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "files": ["build","types"],
  "contributors": [
    "Veclea <vemocle@gmail.com>"
  ],
  "author": "Veclea",
  "repository": {
    "url": "https://github.com/Veclea/samlify.git",
    "type": "git"
  },
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.6",
    "camelcase": "^6.2.0",
    "pako": "^2.1.0",
    "uuid": "^10.0.0",
    "xml": "^1.0.1",
    "xml-crypto": "^6.1.0",
    "xml-encryption": "^3.0.1",
    "xml-escape": "^1.1.0",
    "xmlbuilder2": "^3.1.1",
    "xpath": "^0.0.32"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@types/pako": "^1.0.1",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.4",
    "@microsoft/api-extractor": "7.52.8",
    "ava": "^4.1.0",
    "coveralls": "^3.1.1",
    "nyc": "^17.1.0",
    "timekeeper": "^2.2.0",
    "typescript": "5.8.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/*.d.ts"
    ]
  }
}
